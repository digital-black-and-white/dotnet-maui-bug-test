<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sflv="clr-namespace:Syncfusion.Maui.ListView;assembly=Syncfusion.Maui.ListView"
             x:Class="BugTest.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label
                Text="SfListView Event Bug Test"
                Style="{StaticResource Headline}"/>

            <Label
                Text="Try selecting an item below to see if events are fired."
                Style="{StaticResource SubHeadline}"/>

            <sflv:SfListView
                x:Name="lstBugTest"
                SelectionMode="Single"
                SelectionBackground="DarkBlue"
                SelectionChanged="lstBugTest_SelectionChanged"
                SelectionChanging="lstBugTest_SelectionChanging">
                <sflv:SfListView.ItemTemplate>
                    <DataTemplate>
                        <HorizontalStackLayout>
                            <Label
                                VerticalTextAlignment="Center"
                                Padding="10"
                                Text="{Binding Name}"/>
                        </HorizontalStackLayout>
                    </DataTemplate>
                </sflv:SfListView.ItemTemplate>
            </sflv:SfListView>
            <Editor
                x:Name="txtBugTest"
                HeightRequest="200"
                IsReadOnly="True"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sfi="clr-namespace:Syncfusion.Maui.Inputs;assembly=Syncfusion.Maui.Inputs"
             x:Class="BugTest.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label
                Text="Tab Into Bug Test"
                Style="{StaticResource Headline}"/>

            <Label
                Text="Try to use TAB key to change focus between Entry and SfNumericEntry fields."
                Style="{StaticResource SubHeadline}"/>

            <Entry/>
            <sfi:SfNumericEntry
                Minimum="0.0"
                Maximum="100.0"
                CustomFormat="0.0"
                AllowNull="True"
                ValueChangeMode="OnKeyFocus"/>
            <Entry/>
            <sfi:SfNumericEntry
                Minimum="0.0"
                Maximum="100.0"
                CustomFormat="0.0"
                AllowNull="True"
                ValueChangeMode="OnKeyFocus"/>
            <Entry/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
